{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="form-material">
        {% if error %}
            <div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4 bd-solid bd-red bd-1">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

        <div class="form-field">
            <label for="username">Nom d'utilisateur</label>
            <div class="form-group rounded-1">
                <span class="form-group-item"><span class="iconify-inline" data-icon="mdi:user"></span></span>
                <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control"/>
            </div>
        </div>
        <div class="form-field">
            <label for="password">Mot de passe</label>
            <div class="form-group rounded-1">
                <span class="form-group-item"><span class="iconify-inline" data-icon="mdi:user"></span></span>
                <input type="password" name="_password" id="name" class="form-control" autocomplete="current-password"/>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="btn shadow-1 rounded-1 btn-outline btn-opening text-blue" type="submit"><span
                    class="btn-outline-text">Connexion</span>
        </button>
        <a class="btn shadow-1 rounded-1 btn-outline btn-opening text-blue" href="{{ path('app_register') }}"><span
                    class="btn-outline-text">S'inscrire</span></a>
    </form>
{% endblock %}
