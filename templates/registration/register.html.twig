{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.username) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe '
    }) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button class="btn shadow-1 rounded-1 btn-outline btn-opening text-blue" type="submit"><span
                class="btn-outline-text">S'inscrire</span>
    </button>
    <a class="btn shadow-1 rounded-1 btn-outline btn-opening text-blue" href="{{ path('app_login') }}"><span
                class="btn-outline-text">Se connecter</span></a>
    {{ form_end(registrationForm) }}
{% endblock %}
